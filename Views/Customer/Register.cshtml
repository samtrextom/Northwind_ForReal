@using Northwind.Models
@model Customer
@{
    ViewData["Title"] = "Index";
}
<h1>Register Here!</h1>
<form method="post" asp-action="Register">
    <div class="form-row form-group">
        <label asp-for="CompnayName">Company Name</label>
        <input asp-for="CompnayName" type="text" class="form-control" placeholder="Enter Company Name" />
    </div>
    <div class="form-row form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" type="text" class="form-control" placeholder="Street Address" />
    </div>
    <div class="form-row form-group">
        <div class="col">
            <input asp-for="City" type="text" class="form-control" placeholder="City">
        </div>
        <div class="col">
            <input asp-for="Region" type="text" class="form-control" placeholder="Region">
        </div>
        <div class="col">
            <input asp-for="PostalCode" type="text" class="form-control" placeholder="PostalCode">
        </div>
        <div class="col">
            <input asp-for="Country" type="text" class="form-control" placeholder="Country">
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            <input asp-for="Phone" type="text" class="form-control" placeholder="Phone">
        </div>
        <div class="col">
            <input asp-for="Fax" type="text" class="form-control" placeholder="Fax">
        </div>
    </div>
    <button type="submit" class="btn btn-dark">Register</button>
</form>

