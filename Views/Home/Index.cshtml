
@using Northwind.Models
@model IEnumerable<Discount>

<div class="jumbotron my-2 indexHeader">
    <div class="toast toastDiscount animated heartBeat" role="alert" data-autohide="false" aria-live="assertive" aria-atomic="true" >
        <div class="toast-header">
            <img src="~/indexPics/toastFern.jpg" class="rounded mr-2" alt="...">
            <strong class="mr-auto discount-item" style="width:150px"></strong>
            <small class="text-muted discount-expire"></small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body discount-code"></div>
    </div>
    <h1 class="display-4">Northwind</h1>
    <p class="lead">We have the best prices and selection of high quality foods &amp; beverages on the planet! Check out our featured discounts below.</p>
    <hr class="my-4">
    <p>For exceptional international quisuine, look no further.</p>
    <a class="btn btn-outline-primary btn-lg" href="#" role="button"><i class="fas fa-shopping-cart"></i> Order Now</a>
</div>
<div class="container-fluid discount-container">
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    Hot Discounts!!!
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    <a href="#" class="code" data-code="@item.Code" data-product="@item.Title"><i class="far fa-hand-point-right"></i> Discount Code</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div class="container-fluid card-container">
    <div class="row">
        <div class="col-sm">
            <div class="card indexCard" style="border-radius: 5px;box-shadow: 10px 10px 8px #888888;">
                <img src="/indexPics/northwindsDiscounts.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Hot Discounts!</h5>
                    <p class="card-text">Check out our featured discounts on dozens of the best food products anywhere.</p>
                    <a href="#" class="btn btn-primary">View Discounts</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card indexCard" style="border-radius: 5px;box-shadow: 10px 10px 8px #888888;">
                <img src="/indexPics/northwindsSignUp.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Sign Up Today!</h5>
                    <p class="card-text">To get high quality food and beverage delivered right to your door.</p>
                    <a href="#" class="btn btn-primary">Sign Up</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card indexCard" style="border-radius: 5px;box-shadow: 10px 10px 8px #888888;">
                <img src="/indexPics/northwindsSuppliers.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Top Rated Suppliers</h5>
                    <p class="card-text">Best suppliers of quality foods and beverage. See where we are getting our food.</p>
                    <a href="#" class="btn btn-primary">View Our Suppliers</a>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts
    {
    <script src="/js/client.js"></script>
}

